{% extends 'admin/base.html.twig' %}

{% set title = electronic_param.name %}
{% block header %}
    <div class="row justify-content-end">
        <a href="{{ path('electronic_params_values_index', {electronic: electronic_param.electronic.id, param: electronic_param.id}) }}" class="btn btn-primary">Ajouter un choix</a>
        <a href="{{ path('electronic_params_index', {electronic: electronic_param.electronic.id}) }}" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h4>Nom de l'appareil :</h4>
            <p class="form-control">{{electronic_param.electronic.name}}</p>
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ electronic_param.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ electronic_param.name }}</td>
            </tr>
            <tr>
                <th>Type :</th>
                <td>{{ electronic_param.type }}</td>
            </tr>
            <tr>
                <th>Nombre de choi(x) possible :</th>
                <td>{{ electronic_param.multipleOrNot ? 'Plusieurs' : 'Un seul' }}</td>
            </tr>
            <tr>
                <th>Cr√©er le :</th>
                <td>{{ electronic_param.createdAt ? electronic_param.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le :</th>
                <td>{{ electronic_param.updatedAt ? electronic_param.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('electronic_params_edit', {'id': electronic_param.id, electronic: electronic_param.electronic.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('electronic_params/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
