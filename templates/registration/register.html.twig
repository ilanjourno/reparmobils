{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% set banner = {url: "app_register", title: "Créer son compte"} %}
{% block body %}

	<!--================Login Box Area =================-->
	<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="img/login.jpg" alt="">
						<div class="hover">
							<h4>Vous avez déjà un compte ?</h4>
							<a class="primary-btn" href="{{url('app_login')}}">Se connecter</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="register_form_inner">
						<h3>Créer son compte</h3>
                        {% for flashError in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_start(registrationForm, {attr: {class: "row login_form form-signup", novalidate: "novalidate"}}) }}
                            <div class="col-md-12 form-group">
                                {{ form_row(registrationForm.username) }}
                            </div>
                            <div class="col-md-12 form-group">
                                {{ form_row(registrationForm.email) }}
                            </div>
                            <div class="col-md-12 form-group">
                                {{ form_row(registrationForm.password)}}
                            </div>
                            <div class="col-md-12 form-group">
                                <div class="creat_account">
                                    {{ form_row(registrationForm.agreeTerms) }}
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="primary-btn">Créer son compte</button>
                            </div>
                        {{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
