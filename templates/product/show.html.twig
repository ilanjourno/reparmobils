{% extends 'admin/base.html.twig' %}

{% set title = product.name %}
{% block header %}
    <a href="{{ path('product_index') }}" class="btn btn-primary">Retour</a>
{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Cr√©er le :</th>
                <td>{{ product.createdAt ? product.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le :</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('product/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
