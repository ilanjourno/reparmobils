{% extends 'admin/base.html.twig' %}

{% set title = electronic_params_value.name %}
{% block header %}
    <a href="{{ path('electronic_params_values_index', {electronic: electronic_params_value.param.electronic.id, param: electronic_params_value.param.id}) }}" class="btn btn-primary">Retour</a>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h4>Nom de l'appareil :</h4>
            <p class="form-control">{{electronic_params_value.param.electronic.name}}</p>
        </div>
        <div class="col-md-6">
            <h4>Nom du paramètre :</h4>
            <p class="form-control">{{electronic_params_value.param.name}}</p>
        </div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th># :</th>
                <td>{{ electronic_params_value.id }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ electronic_params_value.name }}</td>
            </tr>
            <tr>
                <th>{{electronic_params_value.param.type == 'colors' ? 'Couleur' : 'Pseudo :'}} :</th>
                <td><span class="text-white {{electronic_params_value.param.type == 'colors' ? 'badge badge-dark' : ''}}" style="background-color: {{electronic_params_value.param.type == 'colors' ? electronic_params_value.nickname : ''}}">{{electronic_params_value.nickname}}</span></td>
            </tr>
            <tr>
                <th>Créer le :</th>
                <td>{{ electronic_params_value.createdAt ? electronic_params_value.createdAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifier le :</th>
                <td>{{ electronic_params_value.updatedAt ? electronic_params_value.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col mt-4">
        <div class="row">
            <a href="{{ path('electronic_params_values_edit', {'id': electronic_params_value.id, electronic: electronic_params_value.param.electronic.id, param: electronic_params_value.param.id}) }}" class="btn btn-primary">Modifier</a>

            {{ include('electronic_params_values/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
